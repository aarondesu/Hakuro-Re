{
  "name": "hakuro",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"cross-env NODE_ENV=development webpack-dev-server --mode development --config webpack.development.js\" \"wait-on http://localhost:8080 && cross-env NODE_ENV=development electron src/main.js\"",
    "build": "cross-env NODE_ENV=production webpack --mode production --config webpack.production.js",
    "release": "yarn build && cross-env NODE_ENV=production build - em.main=src.main.js --config",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "test": "mocha"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-import": "^1.11.0",
    "clean-webpack-plugin": "^1.0.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.2",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "electron-rebuild": "^1.8.2",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^5.2.0",
    "redux-devtools-extension": "^2.13.7",
    "style-loader": "^0.23.1",
    "wait-on": "^3.2.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "antd": "^3.13.0",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "electron-window-state": "^5.0.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^4.6.3",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  }
}
